# Copy this file to .env and configure for your environment

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=SSSP-AI-Service
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ============================================================================
# API Settings (FastAPI - for testing only)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1

# ============================================================================
# gRPC Settings (Primary communication with .NET)
# ============================================================================
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_WORKERS=10
GRPC_MAX_MESSAGE_LENGTH=104857600  # 100MB

# ============================================================================
# Object Detection Model
# ============================================================================
DETECTION_MODEL_TYPE=yolo11s  # yolo11n, yolo11s, yolo11m, yolo11l, yolo11x
# DETECTION_MODEL_PATH=data/models/production/yolo11s_custom.pt  # Optional: custom model path
DETECTION_CONFIDENCE=0.25
DETECTION_IOU_THRESHOLD=0.45
DETECTION_MAX_DETECTIONS=300
DETECTION_IMAGE_SIZE=640

# Device: auto, cuda, cpu, mps
DETECTION_DEVICE=auto
DETECTION_HALF_PRECISION=true  # FP16 for GPU

# ============================================================================
# Waste Detection
# ============================================================================
WASTE_CONFIDENCE=0.3  # Lower threshold for waste

# ============================================================================
# Performance
# ============================================================================
BATCH_SIZE=8
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
WARMUP_ITERATIONS=5

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or console
# LOG_FILE=data/logs/ai-service.log

# ============================================================================
# Monitoring
# ============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false

# ============================================================================
# Data Paths
# ============================================================================
DATA_DIR=data
MODELS_DIR=data/models/production
CACHE_DIR=data/cache
LOGS_DIR=data/logs
REDIS_URL=redis://localhost:6379  # Redis connection URL later