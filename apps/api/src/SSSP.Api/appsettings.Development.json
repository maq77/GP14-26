{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Information",
            "Microsoft.AspNetCore": "Information",
            "Microsoft.EntityFrameworkCore": "Information",
            "Microsoft.EntityFrameworkCore.Database.Command": "Information",
            "System.Net.Http.HttpClient": "Information",
            "Grpc": "Debug",
            "SSSP": "Debug"
        }
    },
    "ConnectionStrings": {
        //"SSSPDB": "Server=HIBO\\MSSQLSERVER01;Database=SSSPDB;Trusted_Connection=True;TrustServerCertificate=True;",
        "MyCon": "Server=AMIN\\SQLSERVER,1433;Database=SSSPDB;Integrated Security=True;Trusted_Connection=True;TrustServerCertificate=True",
        "Redis": "localhost:6379"
    },
    "SecretKey": "DevSecretKey_DoNotUseInProduction_32Chars",
    "AI": {
        "GrpcUrl": "http://localhost:50051",
        "RestUrl": "http://localhost:8000"
    },
    "FaceRecognition": {
        "SimilarityThreshold": 0.60
    },
    "FaceProfileCache": {
        "AbsoluteExpirationMinutes": 1
    },
    "StartupValidation": {
        "Enabled": true,
        "EmitTelemetry": true,
        "FailFastInDevelopment": false,
        "MaxDbRetriesDevelopment": 3,
        "MaxDbRetriesProduction": 5,
        "DbRetryDelaySeconds": 5
    },
    "Cache": {
        "UseRedisFaceCache": false
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/dev/sssp-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    }
}