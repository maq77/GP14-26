{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Information",
            "Microsoft.AspNetCore": "Information",
            "Microsoft.EntityFrameworkCore": "Information",
            "Microsoft.EntityFrameworkCore.Database.Command": "Information",
            "System.Net.Http.HttpClient": "Information",
            "Grpc": "Debug",
            "SSSP": "Debug"
        }
    },
    "ConnectionStrings": {
        //"SSSPDB": "Server=HIBO\\MSSQLSERVER01;Database=SSSPDB;Trusted_Connection=True;TrustServerCertificate=True;",
        "MyCon": "Server=AMIN\\SQLSERVER,1433;Database=SSSPDB;Integrated Security=True;Trusted_Connection=True;TrustServerCertificate=True",
        "Redis": "localhost:6379"
    },
    "SecretKey": "DevSecretKey_DoNotUseInProduction_32Chars",
    "AI": {
        "GrpcUrl": "http://localhost:50051",
        "RestUrl": "http://localhost:8000"
    },
    "FaceRecognition": {
        "MinEmbeddingSize": 128,
        "HighConfidenceThreshold": 0.88,
        "MediumConfidenceThreshold": 0.70,
        "DefaultSimilarityThreshold": 0.65,
        "Tracker": {
            "SessionExpiration": "00:05:00",
            "CacheMaxAge": "00:00:10",
            "CacheSimilarityThreshold": 0.70
        },
        "AutoEnrollment": {
            "MinSimilarity": 0.92,
            "MinVariationDistance": 0.08,
            "MaxEmbeddingsPerProfile": 10,
            "MinIntervalBetweenEnroll": "00:10:00"
        }
    },
    "FaceProfileCache": {
        "AbsoluteExpirationMinutes": 1
    },
    "ApplicationInsights": {
        "ConnectionString": "",
        "EnableAdaptiveSampling": true,
        "EnablePerformanceCounterCollectionModule": true
    },
    "StartupValidation": {
        "Enabled": true,
        "EmitTelemetry": true,
        "FailFastInDevelopment": false,
        "MaxDbRetriesDevelopment": 3,
        "MaxDbRetriesProduction": 5,
        "DbRetryDelaySeconds": 5
    },
    "Cache": {
        "UseRedisFaceCache": false
    },
    "CameraTopology": {
        "SameZoneIsNeighbor": true,
        "Adjacency": {
            "8": [ "9" ],
            "9": [ "8", "10" ],
            "10": [ "9" ]
        },
        "TravelSeconds": {
            "8": {
                "9": 1.5
            },
            "9": {
                "8": 1.5,
                "10": 2.0
            },
            "10": {
                "9": 2.0
            }
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/dev/sssp-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    }
}