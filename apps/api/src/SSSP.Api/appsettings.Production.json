{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning",
            "System.Net.Http.HttpClient": "Warning",
            "Grpc": "Information",
            "SSSP.BL.Services.CameraMonitoringWorker": "Information",
            "SSSP.BL.Services.FaceRecognitionService": "Information",
            "SSSP.BL.Services.FaceEnrollmentService": "Information",
            "SSSP.Infrastructure.AI.Grpc": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        //"SSSPDB": "Server=HIBO\\MSSQLSERVER01;Database=SSSPDB;Trusted_Connection=True;TrustServerCertificate=True;",
        "MyCon": "Server=AMIN\\SQLSERVER,1433;Database=SSSPDB;Integrated Security=True;Trusted_Connection=True;TrustServerCertificate=True",
        "Redis": "localhost:6379"
    },
    "SecretKey": "YourVerySecureSecretKeyHere_ChangeInProduction_32Characters",
    "AI": {
        "GrpcUrl": "http://localhost:50051",
        "RestUrl": "http://localhost:8000"
    },
    "FaceRecognition": {
        "SimilarityThreshold": 0.65
    },
    "FaceProfileCache": {
        "AbsoluteExpirationMinutes": 5
    },
    "StartupValidation": {
        "Enabled": true,
        "EmitTelemetry": true,
        "FailFastInDevelopment": false,
        "MaxDbRetriesDevelopment": 3,
        "MaxDbRetriesProduction": 5,
        "DbRetryDelaySeconds": 5
    },
    "Cache": {
        "UseRedisFaceCache": true
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/sssp-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 30,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
                    "fileSizeLimitBytes": 104857600,
                    "rollOnFileSizeLimit": true
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
}