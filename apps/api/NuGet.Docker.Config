<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Package Sources -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- Explicitly disable ALL fallback folders -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>

  <!-- Configuration -->
  <config>
    <!-- Set global packages folder to Linux path -->
    <add key="globalPackagesFolder" value="/root/.nuget/packages" />
    
    <!-- Disable automatic package restore (we control it explicitly) -->
    <add key="automaticPackageRestore" value="false" />
    
    <!-- HTTP timeout for large packages -->
    <add key="http_proxy.user" value="" />
    <add key="http_proxy.password" value="" />
  </config>

  <!-- Package Source Credentials (if needed for private feeds) -->
  <!-- 
  <packageSourceCredentials>
    <PrivateFeed>
      <add key="Username" value="token" />
      <add key="ClearTextPassword" value="your-token-here" />
    </PrivateFeed>
  </packageSourceCredentials>
  -->
</configuration>